                                        <TextBox Margin="0,0,0,10"  Height="37" materialDesign:HintAssist.Hint="Đơn giá" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding DonGia, StringFormat='N0', UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"></TextBox>
                                    </StackPanel>

                                </Grid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Grid>

            <!-- Grid Báo cáo -->
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Hidden"></Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ChucNangKS}" Value="5">
                                <Setter Property="Visibility" Value="Visible"></Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid Name="gridBaoCao">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding isBaoCaoVisible}" Value="true">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding isBaoCaoVisible}" Value="false">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid>
                        <Grid Margin="10,120,10,10">
                            <TabControl>
                                <TabItem Header="Báo cáo dịch vụ" DataContext="{StaticResource BaoCaoDichVuVM}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="80"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <!-- Button báo cáo -->
                                        <StackPanel Margin="10,25" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                                            <Image Height="25" Width="25" Cursor="Hand" Source="Resources\Icons\btnThem.png" ToolTip="In báo cáo"></Image>
                                            <GridSplitter IsEnabled="False" Width="1" Margin="10,0,10,0" Background="#FFD6D6D6"></GridSplitter>
                                            <Image Height="25" Width="25" Cursor="Hand" Source="Resources\Icons\btnXoa.png" ToolTip="Lưu báo cáo"></Image>
                                        </StackPanel>
                                        <StackPanel Grid.Row="0" Margin="10,20,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                            <DatePicker SelectedDate="{Binding NgayBatDau, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Chọn ngày bắt đầu" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Height="37" Width="150"/>
                                            <DatePicker SelectedDate="{Binding NgayKetThuc, UpdateSourceTrigger=PropertyChanged}" Margin="20,0,0,0" materialDesign:HintAssist.Hint="Chọn ngày kết thúc" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Height="37" Width="150"/>

                                            <Image Margin="30,0,0,0" Height="25" Width="25" Cursor="Hand" Source="Resources\Icons\btnTim.png" ToolTip="Tìm">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                                        <i:InvokeCommandAction Command="{Binding HienBaoCaoCommand}">
                                                        </i:InvokeCommandAction>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </Image>
                                        </StackPanel>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                                <ColumnDefinition Width="3*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <ListView ItemsSource="{Binding ListDichVu}" Grid.Column="0" Margin="10,10,20,70">
                                                <ListView.View>
                                                    <GridView>
                                                        <GridViewColumn Header="Tên dịch vụ" DisplayMemberBinding="{Binding TenDichVu}"/>
                                                        <GridViewColumn Header="Doanh thu" DisplayMemberBinding="{Binding DoanhThu, StringFormat=N0}"/>

                                                    </GridView>
                                                </ListView.View>
                                            </ListView>
                                            <TextBox Grid.Column="0" materialDesign:HintAssist.Hint="Tổng doanh thu" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding TongDoanhThu, UpdateSourceTrigger=PropertyChanged, StringFormat='N0'}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20" Height="37" Width="120" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontFamily="Segoe UI Semibold" FontSize="14"></TextBox>
                                            <GridSplitter Grid.Column="1" HorizontalAlignment="Left" IsEnabled="False" Width="1" Margin="0,10,0,10" Background="#FF9B9B9B"></GridSplitter>
                                            <chart:DoughnutChart Grid.Column="1" ChartSubTitle="Đơn vị tính: VNĐ" ChartTitle="Báo cáo doanh thu dịch vụ">
                                                <chart:DoughnutChart.Series>
                                                    <chart:ChartSeries SeriesTitle="Tỉ lệ doanh thu các loại dịch vụ" DisplayMember="TenDichVu" ItemsSource="{Binding Path=ListDichVu}" ValueMember="DoanhThu"/>
                                                </chart:DoughnutChart.Series>
                                            </chart:DoughnutChart>
                                        </Grid>
                                    </Grid>
                                </TabItem>
                                <TabItem Header="Báo cáo năm">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="80"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <!-- Button báo cáo -->
                                        <StackPanel Margin="10,25" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                                            <Image Height="25" Width="25" Cursor="Hand" Source="Resources\Icons\btnThem.png" ToolTip="In báo cáo"></Image>
                                            <GridSplitter IsEnabled="False" Width="1" Margin="10,0,10,0" Background="#FFD6D6D6"></GridSplitter>
                                            <Image Height="25" Width="25" Cursor="Hand" Source="Resources\Icons\btnXoa.png" ToolTip="Lưu báo cáo"></Image>
                                        </StackPanel>
                                        <StackPanel Grid.Row="0" Margin="10,20,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                            <DatePicker SelectedDate="{Binding NgayBatDau, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Chọn ngày bắt đầu" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Height="37" Width="150"/>
                                            <DatePicker SelectedDate="{Binding NgayKetThuc, UpdateSourceTrigger=PropertyChanged}" Margin="20,0,0,0" materialDesign:HintAssist.Hint="Chọn ngày kết thúc" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Height="37" Width="150"/>

                                            <Image Margin="30,0,0,0" Height="25" Width="25" Cursor="Hand" Source="Resources\Icons\btnTim.png" ToolTip="Tìm">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                                        <i:InvokeCommandAction Command="{Binding HienBaoCaoCommand}">
                                                        </i:InvokeCommandAction>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </Image>
                                        </StackPanel>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                                <ColumnDefinition Width="3*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <ListView ItemsSource="{Binding ListDichVu}" Grid.Column="0" Margin="10,10,20,70">
                                                <ListView.View>
                                                    <GridView>
                                                        <GridViewColumn Header="Tháng" DisplayMemberBinding="{Binding TenDichVu}"/>
                                                        <GridViewColumn Header="Doanh thu" DisplayMemberBinding="{Binding DoanhThu, StringFormat=N0}"/>

                                                    </GridView>
                                                </ListView.View>
                                            </ListView>
                                            <TextBox Grid.Column="0" materialDesign:HintAssist.Hint="Tổng doanh thu" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding TongDoanhThu, UpdateSourceTrigger=PropertyChanged, StringFormat='N0'}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20" Height="37" Width="120" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontFamily="Segoe UI Semibold" FontSize="14"></TextBox>
                                            <GridSplitter Grid.Column="1" HorizontalAlignment="Left" IsEnabled="False" Width="1" Margin="0,10,0,10" Background="#FF9B9B9B"></GridSplitter>
                                            <chart:DoughnutChart Grid.Column="1" ChartSubTitle="Đơn vị tính: VNĐ" ChartTitle="Báo cáo doanh thu năm">
                                                <chart:DoughnutChart.Series>
                                                    <chart:ChartSeries SeriesTitle="Tỉ lệ doanh thu các loại dịch vụ" DisplayMember="TenDichVu" ItemsSource="{Binding Path=ListDichVu}" ValueMember="DoanhThu"/>
                                                </chart:DoughnutChart.Series>
                                            </chart:DoughnutChart>
                                        </Grid>
                                    </Grid>
                                </TabItem>

                            </TabControl>

                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
            
        </Grid>
    </Grid>
</Window>
